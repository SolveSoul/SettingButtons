<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <be.corundum.settingbuttons.SettingButton
        android:id="@+id/action_hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sbBorders="bottom"
        app:sbDescriptionText="Tap to show a message!"
        app:sbTitleText="Hello world"/>

    <be.corundum.settingbuttons.SettingButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sbDescriptionText="I'm just another button, I serve no purpose"
        app:sbTitleText="Another button"/>

</LinearLayout>
